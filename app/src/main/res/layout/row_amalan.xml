<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="4dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:padding="8dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="3">
            <TextView android:layout_column="0"
                android:gravity="center"
                android:layout_row="0"
                android:text="10"
                android:textSize="14dp"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal"
                android:id="@+id/nomor_amalan"
                android:background="@drawable/ocatagram"
                android:typeface="normal"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:layout_height="40dp"
                android:layout_width="48dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp" />
            <LinearLayout android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="4dp">
                <TextView android:id="@+id/nama_amalan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textSize="18dp"
                    android:layout_toLeftOf="@id/nomor_amalan"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/primaryText"
                    />
                <TextView android:id="@+id/jam_amalan"
                    android:textColor="@color/secondaryText"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_below="@+id/nama_amalan"
                    android:layout_toLeftOf="@+id/nomor_amalan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"/>
            </LinearLayout>
            <ImageButton android:src="@drawable/settings"
                android:layout_width="40dp"
                android:background="@color/transparent"
                android:layout_gravity="fill_vertical"
                android:layout_height="20dp"
                android:layout_row="0"
                android:layout_column="2"
                android:id="@+id/button_setting"/>
            <View android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/divider"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="3"/>
        </GridLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>